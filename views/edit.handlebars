<div class="container-fluid mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-10 post rounded my-4">
            <form>
                <div class="form-group">
                    <label for="title">Title: </label>
                    <input type="text" name="title" class="form-control" id="title" value="{{post.title}}" required>
                </div>
                <div class="form-group">
                    <label for="content">Content: </label>
                    <textarea name="content" class="form-control" id="content">{{post.content}}</textarea>
                </div>
                <button type="button" class="btn btn-primary" id="update">UPDATE</button>
                <button type="button" class="btn btn-danger" id="delete">DELETE</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/edit-delete.js"></script>